{
    "include": [
        "**/*"
    ],
    "exclude": [
        "node_modules",
        "blog/node_modules",
        "blog/build"
    ],
    "compilerOptions": {
        "outDir": "build",
        "rootDir": "./blog/",
        "sourceMap": true,
        "baseUrl": "./",
        "paths": {
            "App/*": [
                "./app/*"
            ],
            "Contracts/*": [
                "./contracts/*"
            ],
            "Database/*": [
                "./database/*"
            ]
        },
        "types": [
            "@adonisjs/core",
            "@adonisjs/session",
            "@adonisjs/view",
            "@adonisjs/shield",
            "@adonisjs/auth",
            "@adonisjs/lucid",
            "@adonisjs/mail"
        ]
    }
}
